{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "module": "es2020",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "paths": {
      "@app/*": ["app/*"],
      "@app": ["app"],
      "@store/*": ["app/core/services/store/*"],
      "@config/*": ["app/config/*"],
      "@core/*": ["app/core/*"],
      "@services/*": ["app/core/services/http/*"],
      "@utils/*": ["app/utils/*"],
      "@widget/*": ["app/widget/*"],
      "@shared/*": ["app/shared/*"],
      "@env/*": ["environments/*"],
    },
  },
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "strictTemplates": true,
    "fullTemplateTypeCheck": true,
    "annotateForClosureCompiler": true,
    "strictInjectionParameters": true,
    "skipTemplateCodegen": false,
    "preserveWhitespaces": true,
    "skipMetadataEmit": false,
    "disableTypeScriptVersionCheck": true
  }
}
