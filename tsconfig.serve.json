{
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es2015",
    "types": [
      "node"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "paths": {
      "@app/*": ["src/app/*"],
      "@app": ["src/app"],
      "@store/*": ["src/app/core/services/store/*"],
      "@config/*": ["src/app/config/*"],
      "@core/*": ["src/app/core/*"],
      "@services/*": ["src/app/core/services/http/*"],
      "@utils/*": ["src/app/utils/*"],
      "@widget/*": ["src/app/widget/*"],
      "@env/*": ["src/environments/*"],
      "@shared/*": ["src/app/shared/*"],
      "@assets/*": ["src/assets/*"]
    },
  },
  "files": [
    "app/main.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
